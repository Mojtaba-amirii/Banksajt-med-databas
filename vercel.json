{
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ],
  "redirects": [
    {
      "source": "/api/users",
      "destination": "/backend/server.js",
      "permanent": true
    },
    {
      "source": "/api/sessions",
      "destination": "/backend/server.js",
      "permanent": true
    },
    {
      "source": "/api/me/accounts",
      "destination": "/backend/server.js",
      "permanent": true
    }
  ]
}
