{
  "builds": [
    {
      "src": "backend/package.json",
      "use": "@vercel/node",
      "config": {
        "functions": {
          "backend/server.js": {
            "runtime": "nodejs18.x"
          }
        }
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js/$1" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }
  ]
}
